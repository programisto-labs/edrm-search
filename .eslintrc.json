{
  "env": { "node": true, "es2021": true },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "ecmaVersion": 12, "sourceType": "module" },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": ["error", "always"],
    "indent": "off",
    "space-before-function-paren": "off"
  },
  "ignorePatterns": ["dist/", "node_modules/"]
}
